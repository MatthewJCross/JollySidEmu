<UserControl x:Class="JollySidEmu.Controls.SidVoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JollySidEmu.Controls"
             xmlns:audio="clr-namespace:JollySidEmu.Audio"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel DataContext="{Binding Voice, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Frequency"/>
            <Slider Minimum="0" Maximum="16400" Value="{Binding Frequency}" Grid.Column="1"/>
            <TextBlock Text="{Binding Frequency, Converter={StaticResource SidValueToHertzStringConverter}}" Grid.Column="2" Margin="4,0,0,0"/>
        </Grid>

        <Grid Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Pulse Width"/>
            <Slider Minimum="0" Maximum="0.95" Value="{Binding PulseWidth}" Grid.Column="1"/>
            <TextBlock Text="{Binding PulseWidth, StringFormat={}{0:0.000000}}" Grid.Column="2" Margin="4,0,0,0"/>
        </Grid>

        <ComboBox ItemsSource="{x:Static audio:SidWaveformValues.All}" SelectedItem="{Binding Waveform}" Margin="4,4,4,0" Width="80" HorizontalAlignment="Left"/>

        <StackPanel Orientation="Horizontal">
            <CheckBox Content="Gate" IsChecked="{Binding Gate}" Margin="4,4,4,0"/>
            <CheckBox Content="Sync" IsChecked="{Binding SyncEnabled}" Margin="4,4,4,0"/>
            <CheckBox Content="Ring" IsChecked="{Binding RingModEnabled}" Margin="4,4,4,0"/>
        </StackPanel>

        <GroupBox Header="ADSR">
            <StackPanel DataContext="{Binding Adsr}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Attack" Width="60"/>
                    <Slider Minimum="0" Maximum="15" Value="{Binding Attack}" Width="120"/>
                    <TextBlock Text="{Binding Attack}" Width="20"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Decay" Width="60"/>
                    <Slider Minimum="0" Maximum="15" Value="{Binding Decay}" Width="120"/>
                    <TextBlock Text="{Binding Decay}" Width="20"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Sustain" Width="60"/>
                    <Slider Minimum="0" Maximum="15" Value="{Binding Sustain}" Width="120"/>
                    <TextBlock Text="{Binding Sustain}" Width="20"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Release" Width="60"/>
                    <Slider Minimum="0" Maximum="15" Value="{Binding Release}" Width="120"/>
                    <TextBlock Text="{Binding Release}" Width="20"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
